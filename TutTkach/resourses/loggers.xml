<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="unclediga.tut.spring.core.loggers.ConsoleEventLogger" id="consoleEventLogger"/>
    <bean class="unclediga.tut.spring.core.loggers.FileEventLogger" id="fileEventLogger" init-method="init">
        <constructor-arg value="out/event_log.txt"/>
    </bean>
    <bean class="unclediga.tut.spring.core.loggers.CacheFileEventLogger" destroy-method="destroy"
          id="cacheFileEventLogger" parent="fileEventLogger">
        <constructor-arg index="1" value="5"/>
    </bean>
    
    <bean class="unclediga.tut.spring.core.loggers.CombinedEventLogger" name="combinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>