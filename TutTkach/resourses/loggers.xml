<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="unclediga.tut.spring.core.loggers.ConsoleEventLogger" id="eventLogger"/>
    <bean class="unclediga.tut.spring.core.loggers.FileEventLogger" id="fileEventLogger" init-method="init">
        <constructor-arg value="out/event_log.txt"/>
    </bean>
    <bean class="unclediga.tut.spring.core.loggers.CacheFileEventLogger" destroy-method="destroy"
          id="cacheFileEventLogger">
        <constructor-arg index="0" value="out/event_log.txt"/>
        <constructor-arg index="1" value="5"/>
    </bean>
</beans>